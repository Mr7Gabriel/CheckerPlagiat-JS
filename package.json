{
  "name": "advanced-plagiarism-checker",
  "version": "2.0.0",
  "description": "Advanced Plagiarism Checker dengan AI Recommendations, History Tracking, dan Multi-Format Document Support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test.js",
    "install-deps": "npm install",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "clean": "rm -rf uploads/* && rm -f backup_*.json",
    "setup": "mkdir -p uploads && mkdir -p scripts",
    "build": "npm install && npm run setup",
    "lint": "echo 'Linting JavaScript files...' && node -c server.js",
    "health-check": "curl -f http://localhost:3000/api/info || exit 1"
  },
  "keywords": [
    "plagiarism",
    "checker",
    "ai-powered",
    "nodejs",
    "express",
    "text-analysis",
    "nlp",
    "pdf",
    "word",
    "docx",
    "multi-format",
    "history-tracking",
    "analytics",
    "recommendations",
    "machine-learning",
    "pattern-analysis",
    "deep-analysis",
    "academic-writing",
    "similarity-detection"
  ],
  "author": {
    "name": "Mr7Gabriel",
    "email": "gabriel@nfxl,my.id",
    "url": "https://github.com/Mr7Gabriel"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "mammoth": "^1.6.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mr7Gabriel/CheckerPlagiat-JS/advanced-plagiarism-checker.git"
  },
  "bugs": {
    "url": "https://github.com/Mr7Gabriel/CheckerPlagiat-JS/issues"
  },
  "homepage": "https://github.com/Mr7Gabriel/CheckerPlagiat-JS#readme",
  "config": {
    "port": 3000,
    "maxFileSize": "10MB",
    "maxHistoryEntries": 50,
    "backupInterval": "24h"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/Mr7Gabriel"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}